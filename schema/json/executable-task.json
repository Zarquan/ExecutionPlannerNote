{
    "$id": "https://bit.ly/3upmE9p",
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "allOf": [
        {"$ref": "#/definitions/BasicComplexType"}
    ],
    "properties": {
        "minduration": {"$ref": "#/definitions/ISO8601DurationType"},
        "maxduration": {"$ref": "#/definitions/ISO8601DurationType"},
        "data-resources": {
            "type": "array",
            "items": {"$ref": "#/definitions/DataResourceType"}
        },
        "compute-resources": {
            "type": "array",
            "items": {"$ref": "#/definitions/ComputeResourceType"}
        },
        "storage-resources": {
            "type": "array",
            "items": {"$ref": "#/definitions/StorageResourceType"}
        }
    },
    "definitions": {
        "BasicComplexType": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "format": "uuid"
                },
                "type": {
                    "type": "string",
                    "format": "uri"
                },
                "title": {"type": "string"},
                "description": {"type": "string"}
            },
            "required": [
                "type",
                "uuid"
            ]
        },
        "ComputeVolumeSpec": {
            "type": "object",
            "properties": {
                "path": {"type": "string"},
                "type": {
                    "enum": [
                        "LOCAL",
                        "RESOURCE"
                    ]
                },
                "access": {
                    "enum": [
                        "READONLY",
                        "READWRITE"
                    ]
                }
            },
            "required": [
                "type",
                "path"
            ]
        },
        "LocalVolumeSpec": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/ComputeVolumeSpec"}
            ],
            "properties": {
                "minsize": {"type": "integer"},
                "maxsize": {"type": "integer"}
            }
        },
        "ResourceVolumeSpec": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/ComputeVolumeSpec"}
            ],
            "properties": {
                "resource": {
                    "type": "string",
                    "format": "uuid"
                }
            }
        },
        "ComputeResourceType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/BasicComplexType"}
            ],
            "properties": {
                "instances": {"type": "integer"},
                "mincores": {"type": "integer"},
                "maxcores": {"type": "integer"},
                "minmemory": {"type": "integer"},
                "maxmemory": {"type": "integer"},
                "volumes": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/definitions/LocalVolumeSpec"},
                            {"$ref": "#/definitions/ResourceVolumeSpec"}
                        ]
                    }
                }
            }
        },
        "DataResourceType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/BasicComplexType"}
            ],
            "properties": {}
        },
        "StorageResourceType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/BasicComplexType"}
            ],
            "properties": {
                "minsize": {"type": "integer"},
                "maxsize": {"type": "integer"}
            }
        },
        "EphemeralStorageType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/StorageResourceType"}
            ],
            "properties": {}
        },
        "PersistentStorageType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/StorageResourceType"}
            ],
            "properties": {
                "minlifetime": {
                    "type": "string",
                    "format": "duration"
                },
                "maxlifetime": {
                    "type": "string",
                    "format": "duration"
                }
            }
        },
        "ComputePlatformType": {
            "type": "object",
            "allOf": [
                {"$ref": "#/definitions/BasicComplexType"}
            ],
            "properties": {}
        }
    }
}