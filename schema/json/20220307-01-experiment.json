{
  "$id": "http://www.ivoa.net/xml/ExecPlanner/v0.1#",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "executables": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/BasicComplexType"
      }
    }
  },
  "$defs": {
    "UUIDType": {
      "type": "string",
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
    },
    "ISO8601DurationType": {
      "type": "string",
      "pattern": "P([0-9]+Y){0,1}([0-9]+M){0,1}([0-9]+D){0,1}(T([0-9]+H){0,1}([0-9]+M){0,1}([0-9]+S){0,1}){0,1}"
    },
    "BasicComplexType": {
      "type": "object",
      "typeType": "classInfo",
      "typeName": {
        "localPart": "BasicComplexType",
        "namespaceURI": "http://www.ivoa.net/xml/ExecPlanner/v0.1"
      },
      "required": [
        "name",
        "type",
        "uuid",
        "minLifeTime"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "uuid": {
          "$ref": "#/$defs/UUIDType"
        },
        "minLifeTime": {
          "$ref": "#/$defs/ISO8601DurationType"
        },
        "maxLifeTime": {
          "$ref": "#/$defs/ISO8601DurationType"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
